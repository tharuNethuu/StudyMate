{
  "manifest_version": 3,
  "name": "Focus Monitor",
  "version": "1.0",
  "description": "Track and warn users when they visit distracting sites.",
  "permissions": [
    "history",
    "tabs",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
